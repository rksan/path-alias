{
  "name": "@rksan/path-alias",
  "version": "1.0.0",
  "description": "Reads the path-alias property in any config file and helps resolve it to an absolute path.",
  "scripts": {
    "test": "nyc mocha --config='./test/.mocharc.js'",
    "precoverage-report": "rm -rf coverage && mkdir coverage",
    "coverage-report": "npm run test && nyc report --reporter=text-lcov > ./coverage/lcov.info"
  },
  "author": "rksan",
  "license": "MIT",
  "homepage": "https://github.com/rksan/path-alias#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rksan/path-alias.git"
  },
  "bugs": "https://github.com/rksan/path-alias/issues",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "alias",
    "path"
  ],
  "main": "index.js",
  "imports": {
    "#~/*": [
      "./*.js"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/node": "^18.11.8",
    "app-root-path": "^3.1.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0"
  }
}